<form id="resourceUploadForm" method="post" action="@Url.Action("AjaxUpload", "IDE")" enctype="multipart/form-data">
    <div id="UploadFileModal" class="modal hide fade">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">&times</a>
            <h3>Upload Resource</h3>
        </div>
        <div class="modal-body">
            <input name="file" type="file" />
        </div>
        <div class="modal-footer">
            <a class="btn" data-dismiss="modal">Close</a>
            <input id="ajaxUploadButton" type="submit" value="Submit" class="btn btn-primary"  />
        </div>
    </div>
</form>