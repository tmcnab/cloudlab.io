@model Server.Models.LogOnModel
@{ ViewBag.Title = "Sign In"; }
@section Scripts {
    <script type="text/javascript">
        $().ready(function () {
            if ($('#errorMessage').children().length > 0) {
                var innerText = $('#errorMessage > div > ul > li').text();
                console.log(innerText);
                $('#errorMessage').empty();
                $('#errorMessage').text(innerText);
            } else {
                $('#errorMessage').removeClass('alert');
            }
        });
    </script>
}
<h1>Sign Into Cloudlab.io</h1>
<hr />
<div class="row">
    <div class="span5">
        <p>Please enter your username and password to sign in. If you were redirected here, 
           you will be returned to where you wanted to go. If you don't have an account, hit
           below for a free one!</p>
        <p style="text-align:center">
            <a href='/Account/Register/' class="btn btn-success btn-large"><i class="icon-plus icon-white"></i> Register Now &raquo;</a>
        </p>
    </div>
    <div class="span6 offset1">
        <div id="errorMessage" class="alert alert-error">
            @Html.ValidationSummary(true)
        </div>
        <form class="form-horizontal" action="/Account/SignIn" method="post">
            <fieldset class="control-group">
                <label class="control-label" for="UserName">Username:</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "xlarge span4", placeholder="Required" })
                    <p class="help-text"><strong>@Html.ValidationMessageFor(m => m.UserName)</strong></p>
                </div>
            </fieldset>

            <fieldset class="control-group">
                <label class="control-label" for="UserName">Password:</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { @class = "xlarge span4", placeholder = "Required" })
                    <p class="help-text"><strong>@Html.ValidationMessageFor(m => m.Password)</strong></p>
                </div>
            </fieldset>

            <div class="form-actions">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>
                    <div class="btn-group">
                        <a href='/Account/Recover' class='btn btn-danger'>Recover Account &raquo;</a>  
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>