@model Server.Models.DocumentationItem
@using Server.Helpers
@{ ViewBag.Title = "ACP > Documentation Editor"; }
@section Styles {
    <link href="../../Content/css/mdd/markdowndeep.css" rel="stylesheet" type="text/css" />
}

@using (Html.BeginForm())
{
    <fieldset class="control-group">
        <div class="controls">
            @Html.DropDownListFor(model => model.Category, (List<SelectListItem>)ViewBag.Categories, new { style = "width:940px;" })
        </div>
    </fieldset>
    
    <fieldset class="control-group">
        <div class="controls">
            @Html.TextBoxFor(model => model.Object, new { @class = "span12", maxlength="50", placeholder = "Object Name (Empty OK)" })
        </div>
    </fieldset>
    
    <fieldset class="control-group">
        <div class="controls">
            <div class="input-append">
                @Html.TextBoxFor(model => model.Name, new { maxlength = "50", placeholder = "Object Element Name", required = "required", style="width:808px;" })
                <span class="add-on">@Html.CheckBoxFor(model => model.IsStatic) &nbsp;<strong style="color:Black">Static Function</strong></span>
            </div>
        </div>
    </fieldset>
    
    <fieldset class="control-group">
        <div class='mdd_toolbar span11'></div>
        @Html.TextAreaFor(model => model.Body, new { @class = "input-xlarge span12 mdd_editor", rows = "8" })
    </fieldset>
    
    <fieldset class='control-group mdd_preview'></fieldset>
    
    @*<div class="span12 mdd_preview"></div>  *@
    
    <fieldset class="form-actions">
        <input class="btn primary" type="submit" value="Sumbit" />
    </fieldset>
}

@section Scripts {
    <script src="../../Scripts/mdd/markdowndeep.js" type="text/javascript"></script>
    <script src="../../Scripts/mdd/MarkdownDeepEditor.js" type="text/javascript"></script>
    <script src="../../Scripts/mdd/MarkdownDeepEditorUI.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("textarea.mdd_editor").MarkdownDeep({
                ExtraMode: true,
                MarkdownInHtml: true
            });
        });
    </script>
}