@{ Layout = null; }
@model Server.Models.NewRegisterModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>cloudlab.io</title>
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="width=device-width, maximum-scale=1.0" />
    <link rel="icon" href="@Url.Content("~/Content/i/favicon.ico")" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/i/icon.png")" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/i/icon-72.png")" sizes="72x72" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/i/icon@2x.png")" sizes="114x114" />
    <link href="@Url.Content("~/Content/css/bootstrap/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/view/Home.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="content">
            <div class="row" style="margin-bottom:50px;">
                <div class="span12">
                    <div class="btn-toolbar pull-right">
                        <div class="btn-group">
                            <a data-target="#loginModal" data-toggle="modal" class="btn btn-large btn-info"><i class="icon-user icon-white"></i> Sign In</a>
                            <a data-target="#registerModal" data-toggle="modal" class="btn btn-large btn-success"><i class="icon-plus icon-white"></i> Register</a>
                        </div>
                    </div>
                    <img src="/Content/images/Logo.png" style="width:70px;height:70px; float:left;margin-right:15px;" />
                    <h1>cloudlab.io(alpha)</h1>
                    <h2>numerical processing with javascript and json</h2>
                </div>
            </div>
            <div class="row">
                <div class="span8">
                    <div id="carousel" class="carousel slide">
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="../../Content/images/Documentation.png" />
                                <div class="carousel-caption">
                                    <h4>Native Math</h4>
                                    <p>Don't do math the slow way &mdash; use the native math built into the runtime to process data</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="../../Content/images/Data.png" />
                                <div class="carousel-caption">
                                    <h4>Cloud Storage</h4>
                                    <p>We offer web- and API-based methods of accessing your Javascript and JSON in the cloud</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="../../Content/images/IDE.png" />
                                <div class="carousel-caption">
                                    <h4>Developer Friendly</h4>
                                    <p>We've integrated a number of nifty features that work with you while developing, not against you</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="../../Content/images/Plotting.png" />
                                <div class="carousel-caption">
                                    <h4>Visualize Your Data</h4>
                                    <p>Data by itself is useless &mdash; it's how you use it that matters</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="/Content/images/Account.png" />
                                <div class="carousel-caption">
                                    <h4>Cost-effective</h4>
                                    <p>We're still setting things up, so everything is <em>gratis</em> while we get off the ground</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="alert alert-block alert-info">
                        <h4 class="alert-heading">Hi there!</h4>
                        Check out our <a href="http://blog.cloudlab.io/post/18006613122/reveal" target="_blank">alpha test announcement &raquo;</a>
                    </div>
                </div>
                <div class="span4">
                    <h4>What is this?</h4>
                    <p style="text-align:justify">cloudlab.io is a numerical processing suite akin to Matlab, Octave or Sage built 
                       around Javascript, JSON and cloud-based storage. We've bound native math
                       functions to javascript so that you can get your data processing done faster than
                       using the same algorithms in pure JS.</p>
                </div>
                <div class="span4">&nbsp;</div>
                <div class="span4">
                    <h4>Who is this for?</h4>
                    <p style="text-align:justify">If you want to store lots of JSON data for your app or site, we can do it.</p>
                    <p style="text-align:justify">If you want to then process that data without having to integrate other libraries, we got that covered.</p>
                    <p style="text-align:center"><a href="/Documentation" target="_blank" class="btn btn-success btn-large">cloudlab documentation &raquo;</a></p>
                </div>
                <div class="span12" style="text-align:center">
                    
                </div>
            </div>
        </div>
        <footer class="footer">
            <hr />
            <p>cloudlab.io is a product of <a href="http://seditious-tech.com">Seditious Technologies</a>. Copyright Seditious Technologies 2011-2012. ABN 81687061921</p>
            <p><a href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-url="http://cloudlab.io">Tweet</a></p>
        </footer>
    </div>
    <form action="/Account/SignIn" method="post" class="form-horizontal">
        <div id="loginModal" class="modal fade">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">×</a>
                <h3>Sign In</h3>
            </div>
            <div class="modal-body">
                <input id="UserName" name="UserName" class="span3" type="text" placeholder="Username (Required)" maxlength="50" required />
                <input id="Password" name="Password" class="span3" type="password" placeholder="Password (Required)" maxlength="50" required />
                <button class="btn btn-primary" type="submit">Sign in &raquo;</button>
            </div>
            <div class="modal-footer">
                <a class="btn btn-info" href="/Account/Recover">I totally forgot my password &hellip;</a>
            </div>
        </div>
    </form>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div id="registerModal" class="modal fade">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>Register New Account <small>(it's free)</small></h3>
            </div>
            <div class="modal-body">
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user"></i></span>
                            @Html.TextBoxFor(model => model.RUserName, new { @class="xlarge", maxlength = "50", autocomplete="off", required = "required", placeholder = "Desired Username (Required)", style="width:93%" })
                            @*<input class="xlarge" type="text" id="RUserName" name="UserName" maxlength="50" autocomplete="off" required placeholder="Desired Username (Required)" style="width:93%" /> *@
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-envelope"></i></span>
                            @Html.TextBoxFor(model => model.REmail, new { @class = "xlarge", maxlength = "150", autocomplete = "off", required = "required", placeholder = "Your E-mail Address (Required)", style = "width:93%" })
                            @*<input class="xlarge" type="email" id="REmail" name="Email" maxlength="150" autocomplete="off" required placeholder="Your E-mail Address (Required)" style="width:93%" />*@
                        </div>
                    </div>
                </div>
                <p><small>Once you have successfully registered, your account credentials will be sent to the e-mail account you have nominated. Please check your spam folder if you haven't received such an email.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="icon-remove icon-white"></i> Cancel</button>
                <button type="submit" class="btn btn-success"><i class="icon-ok icon-white"></i> Register</button>
            </div>
        </div>
    }
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $('.carousel').carousel({
            interval: 7500
        });

        // Twitter Button
        !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");

    </script>
    <script src="@Url.Content("~/Scripts/ga.js")" type="text/javascript"></script>
</body>
</html>