@section Styles {
    <link href="../../Content/css/cm/codemirror.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/jqp/jqplot.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/view/IDE.css" rel="stylesheet" type="text/css" />
}
@section Scripts
{
    <script src="/Scripts/ui/jquery.terminal-0.4.3.js" type="text/javascript"></script>
    <script src="/Scripts/cm/codemirror-custom.js" type="text/javascript"></script>  
    <script src="/Scripts/tablesorter/jquery.tablesorter.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.pager.js" type="text/javascript"></script>
    <script src="/Scripts/mdd/markdowndeep.js" type="text/javascript"></script>
    <script src="/Scripts/jqp/jqplot.js" type="text/javascript"></script>
    <script src="/Scripts/jqp/jqplot.canvasTextRenderer.js" type="text/javascript"></script>
    <script src="/Scripts/jqp/jqplot.canvasAxisLabelRenderer.js" type="text/javascript"></script>
    <script src="/Scripts/jqp/jqplot.canvasAxisTickRenderer.js" type="text/javascript"></script>
    <script src="/Scripts/jqp/jqplot.highlighter.js" type="text/javascript"></script>
    <script src="/Scripts/jqp/jqplot.cursor.js" type="text/javascript"></script>
    <script src="/Scripts/util/hotkeys.js" type="text/javascript"></script>
    <script src="/Scripts/util/jshint.js" type="text/javascript"></script>
    <script src="/Scripts/view/ide.js"></script>
}
<div class="tabbable tabs-left">
    <ul class="nav nav-tabs">
        <li class="active">
            <a data-toggle='tab' data-target="#terminal-tab">Terminal</a></li>
        <li><a data-toggle='tab' data-target="#locals-tab">Locals</a></li>
        <li><a data-toggle='tab' data-target="#data-tab">Data</a></li>
        <li><a data-toggle='tab' data-target="#tools-tab">Tools</a></li>
        <li><a data-toggle='tab' data-target="#scratchpad-tab">Scratchpad</a></li>
        <li><a data-toggle='tab' data-target="#documentation-tab">Docs</a></li>
        <li><a data-toggle='tab' data-target="#graphing-tab">Graphing</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="terminal-tab">
            <div class="row">
                <div class="span10 terminalContainerStyle">
                    <div id="terminalContainer"></div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="locals-tab">
            <div class="row">
                <div class="span3 ide-scr">
                    <table id="localsTable" class="table table-striped table-condensed tablesorter">
                        <thead><tr><th>Name</th></tr></thead>
                        <tbody>
                            <tr><td style="text-align:center;">
                                <img width="16px" height="16px" src="@Url.Content("~/Content/glyphs/spinner.gif")" />
                            </td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="data-tab">
            <div class="row">
                <div class="span4 ide-scr">
                    <table id="dataTable" class="table table-striped table-condensed tablesorter">
                        <thead>
                            <tr><th>Id</th><th>Title</th></tr>
                        </thead>
                        <tbody>
                            <tr><td colspan="2" style="text-align:center;">
                                <img width="16px" height="16px" src="@Url.Content("~/Content/glyphs/spinner.gif")" />
                            </td></tr>
                        </tbody>
                    </table>
                </div>
                <div class="span6" id="dataMeta">
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tools-tab">
            <div class="row">
                <div class="span10"></div>
                <div class="span4 ide-scr">
                    <table id="toolTable" class="table table-striped table-condensed tablesorter">
                        <thead>
                            <tr><th>Id</th><th>Title</th></tr>
                        </thead>
                        <tbody>
                            <tr><td colspan="2" style="text-align:center;">
                                <img width="16px" height="16px" src="@Url.Content("~/Content/glyphs/spinner.gif")" />
                            </td></tr>
                        </tbody>
                    </table>
                </div>
                <div class="span6" id="toolMeta">
                </div>
            </div>
        </div>
        <div class="tab-pane" id="scratchpad-tab">
            <div class="row">
                <div class="sp-top btn-toolbar span10">
                    <div class="btn-group">
                        <a id="sp-execute-button" class="btn btn-small pull-right" title="Execute in Terminal"><i class="icon-play"></i></a>
                    </div>
                </div>
                <div class="sp-middle span10">
                    <textarea id="scratchpad-textarea"></textarea>
                </div>
                <div class="sp-bottom span10">
                    <span id="sp-validation-field" class="pull-left">&nbsp;</span>
                    <span id="sp-rowcol-field" class="pull-right">&nbsp;</span>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="documentation-tab">
            <h2 id='doc-title'>No Documentation</h2>
            <hr />
            <div class="row">
                <div class="span10" id='doc-body'>
                    <p>No documentation specified. You can get documentation with:</p><pre>@@doc <em>command</em></pre>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="graphing-tab">
            <div id="graphing-content" class="span10" style="height:500px;">
                <p><em>No graph generated.</em></p>
            </div>
            <div class="btn-toolbar">
                <div class="btn-group" style="font-weight:bold">
                    <a id="exportGraphButton" class="btn btn-info disabled" rel="tooltip" data-original-title="Export Graph to Image"><i class="icon-picture icon-white"></i> Export</a>
                </div>
            </div>
        </div>
    </div>
</div>