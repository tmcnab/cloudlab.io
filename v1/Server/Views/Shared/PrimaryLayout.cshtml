<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>cloudlab.io</title>
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="width=device-width, maximum-scale=1.0" />
    <link rel="icon" href="@Url.Content("~/Content/i/favicon.ico")" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/i/icon.png")" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/i/icon-72.png")" sizes="72x72" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/i/icon@2x.png")" sizes="114x114" />
    <link href="/Content/css/bootstrap/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/Content/css/bootstrap/bootstrap-responsive.css" rel="stylesheet" type="text/css" />
    <link href="/Content/css/view/PrimaryLayout.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    <script src="/Scripts/modernizr-2.5.3.js" type="text/javascript"></script>

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
    @Html.Partial("NavPrivate")
    }
    else
    {
    @Html.Partial("NavPublic");
    }
    <div class="container">
        <div class="content">
            @RenderBody()
        </div>
        <hr style="margin-bottom:6px" />
        <footer>
            <p>
                <a href="/Legal">Legal, Terms & Privacy</a> | 
                <a href="http://blog.cloudlab.io">Blog</a> |
                <a href="http://twitter.com/cloudlab_io">Twitter</a>
            </p>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap/bootstrap.js" type="text/javascript"></script>
    @RenderSection("Scripts", false)
    <script src="/Scripts/view/PrimaryLayout.js" type="text/javascript"></script>
    <script src="/Scripts/ga.js" type="text/javascript"></script>
</body>
</html>
